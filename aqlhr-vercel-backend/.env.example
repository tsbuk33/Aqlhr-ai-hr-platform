# AQLHR Vercel Backend Environment Variables
# ==========================================

# Environment Configuration
ENVIRONMENT=production
NODE_ENV=production

# Frontend Configuration
FRONTEND_URL=https://www.aqlhr.com
API_URL=https://api.aqlhr.com

# CORS Configuration
CORS_ORIGINS=https://www.aqlhr.com,https://aqlhr.com

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Government API Configuration
# ============================

# GOSI (General Organization for Social Insurance)
GOSI_API_URL=https://api.gosi.gov.sa
GOSI_CLIENT_ID=your_gosi_client_id
GOSI_CLIENT_SECRET=your_gosi_client_secret
GOSI_ESTABLISHMENT_ID=your_establishment_id

# HRSD (Human Resources and Social Development)
HRSD_API_URL=https://api.hrsd.gov.sa
HRSD_CLIENT_ID=your_hrsd_client_id
HRSD_CLIENT_SECRET=your_hrsd_client_secret

# QIWA Platform
QIWA_API_URL=https://api.qiwa.sa
QIWA_CLIENT_ID=your_qiwa_client_id
QIWA_CLIENT_SECRET=your_qiwa_client_secret

# ABSHER Platform
ABSHER_API_URL=https://api.absher.sa
ABSHER_CLIENT_ID=your_absher_client_id
ABSHER_CLIENT_SECRET=your_absher_client_secret

# Security Configuration
# ======================
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=1000

# Database Configuration (if using external database)
# ===================================================
DATABASE_URL=your_database_connection_string
REDIS_URL=your_redis_connection_string

# Monitoring and Analytics
# ========================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_API_KEY=your_analytics_api_key

# Feature Flags
# =============
ENABLE_AI_FEATURES=true
ENABLE_GOVERNMENT_INTEGRATION=true
ENABLE_ANALYTICS=true
ENABLE_VOICE_COMMANDS=false

# Compliance Configuration
# ========================
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650
GDPR_COMPLIANCE=true
SAUDI_DATA_PROTECTION_COMPLIANCE=true

# Performance Configuration
# =========================
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
CACHE_TTL=3600

