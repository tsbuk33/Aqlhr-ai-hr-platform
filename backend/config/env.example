# AQLHR 5-Layer Architecture Environment Configuration
# ===================================================

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=aqlhr
POSTGRES_PASSWORD=password
POSTGRES_DB=aqlhr

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB Configuration
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=aqlhr
MONGODB_PASSWORD=password
MONGODB_DATABASE=aqlhr_documents

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Government API Configuration
# ============================

# GOSI (General Organization for Social Insurance)
GOSI_API_URL=https://api.gosi.gov.sa
GOSI_CLIENT_ID=your_gosi_client_id
GOSI_CLIENT_SECRET=your_gosi_client_secret
ESTABLISHMENT_ID=your_establishment_id

# HRSD (Human Resources and Social Development)
HRSD_API_URL=https://api.hrsd.gov.sa
HRSD_CLIENT_ID=your_hrsd_client_id
HRSD_CLIENT_SECRET=your_hrsd_client_secret

# QIWA Platform
QIWA_API_URL=https://api.qiwa.sa
QIWA_CLIENT_ID=your_qiwa_client_id
QIWA_CLIENT_SECRET=your_qiwa_client_secret

# ABSHER Platform
ABSHER_API_URL=https://api.absher.sa
ABSHER_CLIENT_ID=your_absher_client_id
ABSHER_CLIENT_SECRET=your_absher_client_secret

# Banking Integration
# ===================
BANK_API_URLS=https://api.bank1.com,https://api.bank2.com
BANK_CREDENTIALS=bank1_key:bank1_secret,bank2_key:bank2_secret

# Security Configuration
# ======================
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=1000

# Monitoring Configuration
# ========================
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Email Configuration
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# SMS Configuration
# =================
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# File Storage Configuration
# ==========================
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=aqlhr-documents
AWS_REGION=us-east-1

# AI Model Configuration
# ======================
AI_MODEL_PATH=/app/models
ARABIC_NLP_MODEL=aubmindlab/bert-base-arabertv02
ENGLISH_NLP_MODEL=bert-base-uncased
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Performance Configuration
# =========================
MAX_WORKERS=4
CACHE_TTL=3600
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=1000

# Feature Flags
# =============
ENABLE_AI_FEATURES=true
ENABLE_GOVERNMENT_INTEGRATION=true
ENABLE_ANALYTICS=true
ENABLE_MOBILE_API=true
ENABLE_VOICE_COMMANDS=false

# Compliance Configuration
# ========================
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=3650  # 10 years
GDPR_COMPLIANCE=true
SAUDI_DATA_PROTECTION_COMPLIANCE=true

# Backup Configuration
# ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Development Configuration
# =========================
DEBUG=true
RELOAD=true
WORKERS=1

